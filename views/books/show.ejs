<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head", { title: `Book: ${book.title}` }) %>
  </head>
  <body>
    <%- include("../partials/navbar") %>

    <div class="show-container">
      <div class="show-card">
        <h1 class="show-title"><%= book.title %></h1>

        <p class="show-author"><strong>Author:</strong> <%= book.author %></p>
        <p class="show-genre"><strong>Genre:</strong> <%= book.genre %></p>

        <p class="show-status <%= book.isRead ? 'read-true' : 'read-false' %>">
          <%= book.isRead ? "This book has been read!" : "This book is waiting to be read!" %>
        </p>

        <!-- Buttons Stack -->
        <div class="show-buttons">
          <!-- EDIT FORM -->
          <form action="/books/<%= book._id %>/edit" method="GET">
            <button type="submit" class="show-btn show-edit">Edit <%= book.title %></button>
          </form>
        
          <!-- DELETE FORM -->
          <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
            <button type="submit" class="show-btn show-delete">Delete <%= book.title %></button>
          </form>
        </div>
      </div>
    </div>

    <%- include("../partials/footer") %>
  </body>
</html>