<!-- views/books/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head", { title: "Edit Your Book" }) %>
</head>
<body>
    <%- include("../partials/navbar") %>  <!-- Navbar added -->

    <h1>Edit <%= book.title %></h1>

        <!-- Edit Form: Sends updated data to PUT /books/:bookId -->
        <form action="/books/<%= book._id %>?_method=PUT" method="POST">
      
        <!-- Title Input -->
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%= book.title %>" required />

        <!-- Author Input -->
        <label for="author">Author:</label>
        <input type="text" name="author" id="author" value="<%= book.author %>" required />

        <!-- Genre Input -->
        <label for="genre">Genre:</label>
        <input type="text" name="genre" id="genre" value="<%= book.genre %>" />

        <!-- Checkbox for "Read Status" -->
        <label for="isRead">Have you read this book?</label>
        <input type="checkbox" name="isRead" id="isRead"
            <% if (book.isRead) { %> checked <% } %> />

        <!-- Submitted By Input -->
        <label for="submittedBy">Submitted By:</label>
        <input type="text" name="submittedBy" id="submittedBy" value="<%= book.submittedBy %>" required />
    
        <!-- Submit Button -->
        <button type="submit">Update Book</button>
    </form>
</body>
<%- include("./partials/footer") %>
</html>